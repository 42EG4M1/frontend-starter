{
  "name": "web-starter-ejs",
  "version": "0.0.1",
  "description": "My static website starter kit. babel, webpack, sass and ejs.",
  "main": "index.js",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/42EG4M1/web-starter-ejs.git"
  },
  "author": "Tatsuya Azegami",
  "license": "MIT",
  "scripts": {
    "start": "npm-run-all dev -p watch server",
    "build": "npm-run-all clean mkdir build:sass build:postcss -p build:ejs build:webpack copy",
    "build:ejs": "ejs-cli --base-dir src/ejs \"*.ejs\" --out dist/",
    "build:sass": "node-sass src/scss/all.scss dist/css/bundle.min.css",
    "build:postcss": "postcss dist/css/*.css --no-map --use autoprefixer -b \"last 2 versions\" --use csswring --output dist/css/*.css",
    "build:webpack": "webpack",
    "dev": "npm-run-all mkdir dev:sass dev:postcss -p dev:ejs dev:webpack copy",
    "dev:ejs": "ejs-cli --base-dir src/ejs \"*.ejs\" --out dist/",
    "dev:sass": "node-sass src/scss/all.scss dist/css/bundle.min.css --output-style expanded",
    "dev:postcss": "postcss dist/css/*.css --use autoprefixer -b \"last 2 versions\" --output dist/css/*.css",
    "dev:webpack": "webpack --config webpack.config.dev.js",
    "watch": "npm-run-all -p watch:*",
    "watch:ejs": "onchange \"src/ejs/**/*\" -- npm run dev:ejs",
    "watch:css": "onchange \"src/scss/**/*\" -- npm run dev:sass && npm run dev:postcss",
    "watch:js": "onchange \"src/js/**/*\" -- npm run dev:webpack",
    "watch:copy": "cpx \"src/**/*.{svg,gif,png,jpg,html}\" dist --watch",
    "server": "browser-sync start --server dist --files \"./dist/**/*\"",
    "lint": "eslint src/js",
    "copy": "cpx \"src/**/*.{svg,gif,png,jpg,html}\" dist",
    "mkdir": "mkdirp dist/css dist/js",
    "clean": "rimraf dist"
  },
  "devDependencies": {
    "autoprefixer": "^6.7.7",
    "babel-core": "^6.24.1",
    "babel-loader": "^6.4.1",
    "babel-plugin-transform-runtime": "^6.23.0",
    "babel-preset-env": "^1.4.0",
    "browser-sync": "^2.18.8",
    "cpx": "^1.5.0",
    "csswring": "^5.1.1",
    "ejs-cli": "^2.0.0",
    "eslint": "^3.19.0",
    "eslint-config-airbnb-base": "^11.1.3",
    "eslint-plugin-import": "^2.2.0",
    "mkdirp": "^0.5.1",
    "node-sass": "^4.5.2",
    "npm-run-all": "^4.0.2",
    "onchange": "^3.2.1",
    "postcss-cli": "^3.1.1",
    "rimraf": "^2.6.1",
    "uglify-save-license": "^0.4.1",
    "webpack": "^2.3.3"
  },
  "babel": {
    "presets": [
      [
        "env",
        {
          "targets": {
            "browsers": [
              "last 2 versions"
            ]
          }
        }
      ]
    ],
    "plugins": [
      [
        "transform-runtime",
        {
          "helpers": false
        }
      ]
    ]
  },
  "eslintConfig": {
    "extends": [
      "airbnb-base"
    ],
    "env": {
      "browser": true,
      "es6": true
    },
    "parserOptions": {
      "sourceType": "module"
    }
  }
}
